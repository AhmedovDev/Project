<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:mask="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.screens.editphone.ui.EditPhoneFragment"
        android:background="@color/colorPrimaryDark"
        android:focusable="true"
        android:focusableInTouchMode="true"
>


    <com.chaos.view.PinView
            android:id="@+id/PinView_confirmFragment_code"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:cursorVisible="false"
            android:fontFamily="@font/sfprolight"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:hideLineWhenFilled="true"
            app:itemCount="4"
            app:itemSpacing="16dp"
            app:itemWidth="16dp"

            app:lineColor="#EBEBEB"
            app:viewType="line"
            tools:text="123456"
            android:layout_marginTop="35dp"
            mask:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="8dp"
            mask:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintBottom_toTopOf="@+id/rectangle_2" mask:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:id="@+id/rectangle_2"
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/passivebutton"
            android:text="Продолжить"
            android:textColor="#C6C6C6"
            android:visibility="visible"
            android:typeface="monospace"
            android:textAllCaps="false"
            android:fontFamily="@font/sfprolight"
            android:layout_marginEnd="8dp"
            mask:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="112dp"
            mask:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="45dp"
            mask:layout_constraintTop_toBottomOf="@+id/PinView_confirmFragment_code"/>

    <include
            layout="@layout/tolbar"
            android:id="@+id/include6"
            mask:layout_constraintEnd_toEndOf="parent" mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintTop_toTopOf="parent"
            mask:layout_constraintBottom_toTopOf="@+id/phoneOnEditCode"
            mask:layout_constraintVertical_bias="0.47000003"/>
    <TextView
            android:text="Введите код из SMS сообщения"
            android:layout_width="253dp"
            android:layout_height="26dp"
            android:id="@+id/textView3"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.45sp"
            android:gravity="center_horizontal|top"
            android:textSize="14sp"
            android:textColor="#444444"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="@font/sfprolight"
            mask:layout_constraintTop_toBottomOf="@+id/phoneOnEditCode"
            android:layout_marginEnd="8dp" mask:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintBottom_toTopOf="@+id/PinView_confirmFragment_code" android:layout_marginTop="12dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneOnEditCode" android:layout_marginTop="111dp"
            mask:layout_constraintTop_toBottomOf="@+id/include6" mask:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" mask:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            mask:layout_constraintBottom_toTopOf="@+id/textView3"
            android:fontFamily="@font/sfprolight"
            mask:layout_constraintHorizontal_bias="0.498"/>


</android.support.constraint.ConstraintLayout>