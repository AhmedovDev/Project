<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.screens.productcard.ui.ProductCargFragment"
        android:background="@color/colorPrimaryDark">

    <ImageButton
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_button_backarrow_white" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_button_backarrow_white"
            tools:ignore="VectorDrawableCompat"
            android:elevation="1dp"


    />

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="-36dp"
            tools:layout_editor_absoluteX="-16dp" android:id="@+id/nestedScrollView_productCard">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/recycler_images" app:layout_constraintHorizontal_bias="0.0"/>


            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_images"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
                    android:fontFamily="@font/sfpromedium"
                    android:textColor="#444444"
                    android:textSize="14sp"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="19dp"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    android:id="@+id/constraintLayout">


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:id="@+id/linearLayout"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent">

                    <TextView
                            android:text="≈"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
                            tools:layout_editor_absoluteX="107dp" android:id="@+id/isEstimatedPrise"
                            android:textColor="#000000"
                            android:fontFamily="@font/sfpromedium"
                            android:textSize="18sp"
                            android:paddingRight="4dp"
                            android:visibility="gone"/>

                    <TextView
                            android:text="345"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
                            tools:layout_editor_absoluteX="107dp" android:id="@+id/price"
                            android:textColor="#000000"
                            android:fontFamily="@font/sfpromedium"
                            android:textSize="18sp"
                            android:paddingRight="4dp"/>
                    <TextView
                            android:text="₽"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:layout_editor_absoluteY="67dp"
                            tools:layout_editor_absoluteX="165dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/sfpromedium"
                            android:textSize="18sp"
                    />
                    <TextView
                            android:text="/"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:layout_editor_absoluteY="65dp"
                            tools:layout_editor_absoluteX="223dp"
                            android:textColor="#C6C6C6"
                            android:fontFamily="@font/sfpromedium"
                            android:textSize="14sp"
                            android:paddingRight="4dp"
                            android:paddingLeft="4dp"/>
                    <TextView
                            android:text="2,5кг"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" tools:layout_editor_absoluteY="46dp"
                            tools:layout_editor_absoluteX="198dp" android:id="@+id/count_product"
                            android:textColor="#C6C6C6"
                            android:fontFamily="@font/sfpromedium"
                            android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              app:layout_constraintEnd_toEndOf="parent"
                              android:layout_marginEnd="16dp"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                >


                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_button_minus_big"
                            android:id="@+id/minus"
                            tools:ignore="VectorDrawableCompat"
                            android:background="@color/colorPrimaryDark"

                    />

                    <EditText
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/input_product"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:fontFamily="@font/sfpromedium"
                            android:inputType="number"
                            android:background="@color/colorPrimaryDark"
                            android:focusable="true"
                            android:maxEms="4"
                            android:cursorVisible="true"
                            android:paddingTop="5dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"

                    />
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_button_plus_big"
                            android:id="@+id/plus"
                            android:background="@color/colorPrimaryDark"
                            tools:ignore="VectorDrawableCompat"
                    />


                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="#F6F6F6" app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:textSize="14sp" android:layout_marginTop="24dp"
                          app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            />

            <TextView
                    android:text="Описание :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:fontFamily="@font/sfpromedium"
                    android:textColor="#000000"
                    android:textSize="14sp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
            />
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discription"
                    android:textColor="#000000"
                    android:fontFamily="@font/sfpromedium"
                    android:textSize="12sp" app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/product_card_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            android:visibility="gone"
    >

        <android.support.constraint.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_gravity="center">


            <ImageView
                    android:src="@drawable/ic_wifi"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="175dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="176dp" android:layout_marginTop="200dp"
            />
            <Button
                    android:layout_width="160dp"
                    android:layout_height="41dp"
                    android:id="@+id/update_productcard"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="109dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="106dp"
                    android:textAlignment="center"
                    android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                    android:background="@drawable/activebutton" android:textAllCaps="false"
                    android:text="Обновить"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:clickable="true"/>
            <TextView
                    android:text="@string/connect_problem"
                    android:textColor="#000000"
                    android:fontFamily="@font/sfprodisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" android:layout_marginTop="26dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="175dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="178dp"
                    android:textSize="18sp"/>
            <TextView
                    android:text="@string/check_settings"
                    android:layout_width="191dp"
                    android:layout_height="57dp"
                    android:id="@+id/textView5" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="101dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="101dp" android:textAlignment="center"
                    android:textColor="#444444"
                    android:textSize="14sp" app:layout_constraintHorizontal_bias="0.666"
                    android:fontFamily="@font/sfprolight"/>
        </android.support.constraint.ConstraintLayout>


    </FrameLayout>


    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_productcard"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>