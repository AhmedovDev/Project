<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:mask="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.screens.inputphone.ui.InputPhoneFragment"
        android:background="@color/colorPrimaryDark"
        android:focusable="true"
        android:focusableInTouchMode="true"
>

    <android.support.constraint.ConstraintLayout

            android:layout_width="257dp" android:layout_height="183dp"
            mask:layout_constraintStart_toStartOf="parent" mask:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintButton"
            android:layout_marginTop="30dp" mask:layout_constraintTop_toBottomOf="@+id/constraintText">

        <TextView
                android:id="@+id/timer"
                android:gravity="center"
                android:layout_width="235dp"
                android:layout_height="64dp"
                android:text="@string/confirmation_timer"
                mask:layout_constraintStart_toStartOf="parent"
                mask:layout_constraintEnd_toEndOf="parent" mask:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp"/>

        <com.chaos.view.PinView
                android:id="@+id/PinView_confirmFragment_code"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:cursorVisible="false"
                android:fontFamily="@font/sfprolight"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:hideLineWhenFilled="true"
                app:itemCount="4"
                app:itemSpacing="16dp"
                app:itemWidth="16dp"
                app:lineColor="#EBEBEB"
                app:viewType="line"
                tools:text="123456"
                android:layout_marginEnd="8dp"
                mask:layout_constraintEnd_toEndOf="parent"
                mask:layout_constraintStart_toStartOf="parent"
                mask:layout_constraintHorizontal_bias="0.498"
                mask:layout_constraintBottom_toTopOf="@+id/getCode" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/getCode"
                android:layout_width="180dp"
                android:layout_height="41dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/activebutton"
                android:text="@string/get_code_button"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:typeface="monospace"
                android:textAllCaps="false"
                android:fontFamily="@font/sfprolight"
                android:layout_marginTop="40dp"
                mask:layout_constraintTop_toBottomOf="@+id/PinView_confirmFragment_code"
                android:layout_below="@+id/PinView_confirmFragment_code" mask:layout_constraintStart_toStartOf="parent"
                mask:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"/>
    </android.support.constraint.ConstraintLayout>
    <include
            layout="@layout/toolbar_autorization_with_arrow"
            android:id="@+id/toolbarmain"
            mask:layout_constraintEnd_toEndOf="parent" mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintTop_toTopOf="parent"
            mask:layout_constraintBottom_toTopOf="@+id/constraintText"/>

    <android.support.constraint.ConstraintLayout
            android:layout_height="69dp"
            android:layout_width="284dp"
            android:id="@+id/constraintText"
            mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintEnd_toEndOf="parent"
            mask:layout_constraintHorizontal_bias="0.496"
            mask:layout_constraintTop_toBottomOf="@+id/toolbarmain" android:layout_marginTop="111dp"
            mask:layout_constraintBottom_toTopOf="@+id/constraintButton">
        <TextView
                android:layout_centerHorizontal="true"
                android:text="@string/code_input"
                android:layout_width="253dp"
                android:layout_height="26dp"
                android:id="@+id/textView3"
                android:lineSpacingExtra="3sp"
                android:translationY="-1.45sp"
                android:gravity="center_horizontal|top"
                android:textSize="14sp"
                android:textColor="#444444"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:fontFamily="@font/sfprolight"
                mask:layout_constraintTop_toBottomOf="@+id/phoneOnEditCode"
                mask:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/phoneOnEditCode" android:layout_marginStart="8dp"
                mask:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_centerHorizontal="true"
                android:text="586587667"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="140dp"
                android:layout_height="28dp"
                android:id="@+id/phoneOnEditCode"
                android:fontFamily="@font/sfprolight"
                mask:layout_constraintEnd_toEndOf="parent"
                mask:layout_constraintStart_toStartOf="parent"
                mask:layout_constraintBottom_toTopOf="@+id/textView3"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
        />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>