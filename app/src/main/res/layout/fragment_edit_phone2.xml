<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
        xmlns:mask="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.screens.editphone.ui.EditPhoneFragment"
        android:background="@color/colorPrimaryDark"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/editphone"
>


    <br.com.sapereaude.maskedEditText.MaskedEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/phone"
            android:visibility="visible"
            android:typeface="monospace"
            android:hint="9001234567"
            mask:allowed_chars="1234567890"
            mask:mask="+7 (###)###-##-##"
            android:imeOptions="actionDone"
            android:paddingLeft="16dp"
            android:textSize="21sp"
            android:fontFamily="@font/sfprolight"
            mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintEnd_toEndOf="parent"
            android:singleLine="false" android:includeFontPadding="false" mask:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="80dp" mask:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:id="@+id/rectangle_2"
            android:layout_width="180dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/passivebutton"
            android:text="Продолжить"
            android:textColor="#C6C6C6"
            android:visibility="visible"
            android:typeface="monospace"
            android:textAllCaps="false"
            android:fontFamily="@font/sfprolight"
            android:layout_marginEnd="8dp"
            mask:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="40dp"
            mask:layout_constraintTop_toBottomOf="@+id/phone"
    />

    <include
            layout="@layout/tolbar"
            android:id="@+id/include6"
            mask:layout_constraintEnd_toEndOf="parent" mask:layout_constraintStart_toStartOf="parent"
            mask:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
    />
    <TextView
            android:text="Введите номер телефона.                                  Вам придет СМС с кодом подтверждения."
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:id="@+id/textView3"
            android:lineSpacingExtra="3sp"
            android:translationY="-1.45sp"
            android:gravity="center_horizontal|top"
            android:textSize="14sp"
            android:textColor="#444444"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="@font/sfprolight"
            mask:layout_constraintTop_toBottomOf="@+id/include6" android:layout_marginTop="101dp"
            mask:layout_constraintStart_toStartOf="parent" android:layout_marginStart="65dp"
            mask:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="66dp"/>


</android.support.constraint.ConstraintLayout>